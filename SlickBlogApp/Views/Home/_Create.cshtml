@model SlickBlogApp.ViewModels.CreateBlogModel
<ul class="nav nav-list">
    <li class="active"><a data-toggle="modal" href="#myModal"><i class="icon-chevron-right"></i> New blog</a></li>
</ul>
<div class="modal hide" id="myModal">
    <ul class="nav nav-list">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">×</button>
        <h3>New blog</h3>
    </div>
</ul>
    @using (Html.BeginForm("CreateBlog", "Home"))
    {
        <div class="modal-body">
            @Html.ValidationSummary(true)
            <fieldset>
                <div class="control-group">
                    <label class="control-label" for="Title">Title</label>
                    <div class="controls">
                        @Html.TextBoxFor(b => b.Title, new { @class = "input-xlarge" })<br />
                        @Html.ValidationMessageFor(b => b.Title)
                        @*                        <p class="help-block">Blog title</p>*@
                    </div>
                    <br />
                    <label class="control-label" for="Address">Address</label>
                    <div class="controls">
                        @Html.TextBoxFor(b => b.Address, new { @class = "input-xlarge" })<br />
                        @Html.ValidationMessageFor(b => b.Address)
                        @*                        <p class="help-block">Unique address prefix for your blog</p>*@
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">Close</a>
            <input class="btn btn-primary" type="submit" value="Create blog" />
        </div>
    }
</div>
