@model IEnumerable<SlickBlogApp.Models.Blog>
@using SlickBlogApp.Helpers
<table class="table table-striped table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Address</th>
            <th>Posts</th>
            <th>Comments</th>
            <th>Views</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var blog in Model)
            {

            <tr>
                <td>@blog.Title</td>
                <td>@blog.Address</td>
                <td>@Html.PostCount(blog.BlogId)</td>
                <td>@Html.TotalCommentCount(blog.BlogId)</td>
                <td>...</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">Action
   
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <!-- dropdown menu links -->
                            <li><a href="@Url.Content("~/Blog/" + blog.Address)">View</a></li>
                            <li><a href="@Url.Content("~/Blog/" + blog.Address + "/Posts/all")">Dashboard</a>
                            </li>
                            <li><a href="@Url.Content("~/Blog/" + blog.Address + "/PostEditor")">New post</a>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
            }
        }
        else
        {
            <tr>
                <td>No blogs yet</td>
                <td>...</td>
                <td>...</td>
                <td>...</td>
                <td>...</td>
            </tr>
        }
    </tbody>

</table>
